using namespace std;

typedef struct SinhVien
{
	wchar_t mssv[20];
	wchar_t hoten[30];
	wchar_t major[30];
	int khoa;
	wchar_t birth[20];
	wchar_t JPG[100];
	wchar_t desc[1000];
	wchar_t hobby[10][200];
	int x;
}SV;
int demnguoi(FILE* fin)
{
	int dem = 0;
	wchar_t c[2000];
	do
	{
		fgetws(c, 2000, fin);
		dem++;
	} while (!feof(fin));
	rewind(fin);
	return dem;
}
